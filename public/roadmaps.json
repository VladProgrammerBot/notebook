					},
					{
						"id": 10,
						"isChecked": false,
						"isSubChecked": false,
						"isMain": false,
						"name": "Add the sautéed beets and carrots into the broth, stirring well to combine.",
						"childrens": []
					}
				]
			},
			{
				"id": 11,
				"isChecked": false,
				"isSubChecked": false,
				"isMain": false,
				"name": "Step 3: Finishing the Borscht",
				"childrens": [
					{
						"id": 12,
						"isChecked": false,
						"isSubChecked": false,
						"isMain": false,
						"name": "Add the chopped cabbage to the broth and simmer for another 10 minutes until the cabbage is tender.",
