							{
								"id": 7,
								"isChecked": false,
								"isSubChecked": false,
								"isMain": false,
								"name": "Sauté chopped beets and carrots with a tablespoon of oil for 5-7 minutes.",
								"childrens": []
							},
							{
								"id": 8,
								"isChecked": false,
								"isSubChecked": false,
								"isMain": false,
								"name": "Add 1-2 tablespoons of tomato paste and continue cooking for 3 more minutes.",
								"childrens": []
							}
						]
					},
					{
						"id": 9,
						"isChecked": false,
						"isSubChecked": false,
						"isMain": false,
						"name": "Once the broth is ready, add chopped potatoes and cook for 10-15 minutes until soft.",
